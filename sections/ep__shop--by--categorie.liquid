<!-- CSS de Glide.js -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@glidejs/glide/dist/css/glide.core.min.css">

<section class="ep__shop--by--categorie">
  <div class="padding-container ep__shop--by--categorie-container ">
    {%- if section.settings.categories_title != blank -%}
      <h2>{{ section.settings.categories_title }}</h2>
    {%- else -%}
      <h2>Shop by category</h2>
    {%- endif -%}
    <div class="ep__shop--by--categorie__glide-container">
      <div class="glide">
        <div class="glide__track" data-glide-el="track">
          <ul class="glide__slides">
            {%- for block in section.blocks -%}
              {%- if block.type == "categories" -%}
                {%- render "ep__list-categories" -%}

              {%- endif -%}
            {%- endfor -%}
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>
<!-- JS de Glide.js -->
<script src="https://cdn.jsdelivr.net/npm/@glidejs/glide/dist/glide.min.js" defer></script>
<script>
  document.addEventListener('DOMContentLoaded', function () {
    new Glide('.glide', {
  type: "carousel",
  startAt: 0,
  perView: 6,
  breakpoints: {
    1200: {
      perView: 4
    },
    768: {
      perView: 2
    },
    480: {
      perView: 1
    }
  }
  }).mount();
  })
</script>

<style>
  .ep__shop--by--categorie {
    display: flex;
    max-width: var(--page-width);
    margin: 0 auto;
  }
  .padding-container {
    padding: 20px 80px;
  }
  .ep__shop--by--categorie-container {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
  }
  .ep__shop--by--categorie-container h2 {
    font-family: "Questrial";
    font-weight: 400;
    font-style: Regular;
    font-size: 32px;
    leading-trim: NONE;
    line-height: 42px;
    letter-spacing: 1px;
    text-align: center;
    vertical-align: middle;
    text-transform: uppercase;
    color: #212121;
  }
  .ep__shop-category {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .ep__category-img {
    max-width: 140px;
    min-height: 140px;
  }
  .ep__category-img img {
    width: 100%;
    height: 100%;
    object-fit: contain;

  }
  .ep__shope-category h3 {
    font-family: 'Questrial';
    font-weight: 400;
    font-style: Regular;
    font-size: 18px;
    leading-trim: NONE;
    line-height: 24px;
    letter-spacing: 1px;
    vertical-align: middle;
    text-transform: uppercase;
    color: #212121;
  }

</style>

{% schema %}
  {
    "name": "ep__shop-by-categorie",
    "tag": "section",
    "class": "ep__shop-by-categorie",
    "settings": [
      {
        "type": "text",
        "id": "categories_title",
        "label": "Section Title"
      }
    ],
    "blocks": [
      {
        "name": "categories",
        "type": "categories",
        "settings": [
          {
            "type": "image_picker",
            "id": "category_img",
            "label": "Categorie Picture"

          },
          {
            "type": "text",
            "id": "category_type",
            "label": "Categorie Name"

          }

        ]
      }
    ],
    "presets": [
      {
        "name": "ep__shope-by-categorie",
        "settings": {}
      }
    ]
  }
{% endschema %}