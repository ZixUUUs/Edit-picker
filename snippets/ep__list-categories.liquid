<li class="ep__shop-category glide__slide">
  <div class="ep__category-img">
    {%- if block.settings.category_img != blank -%}
      <img
        src="{{ block.settings.category_img |  image_url: width:block.settings.category_img.width  }}"
        alt="{{ block.settings.category_type | escape }}"
        width="{{ block.settings.category_img.width }}"
        height="{{ block.settings.category_img.height }}"
        loading="lazy">

    {%- endif -%}
  </div>
  {%- if block.settings.category_type != blank -%}
    <h3>{{ block.settings.category_type }}</h3>
  {%- endif -%}
</li>
<style>
  .ep__shop-category {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .ep__category-img {
    max-width: 140px;
    min-height: 140px;
  }
  .ep__category-img img {
    width: 100%;
    height: 100%;
    object-fit: contain;

  }
  .ep__shope-category h3 {
    font-family: 'Questrial';
    font-weight: 400;
    font-style: Regular;
    font-size: 18px;
    leading-trim: NONE;
    line-height: 24px;
    letter-spacing: 1px;
    vertical-align: middle;
    text-transform: uppercase;
    color: #212121;
  }
</style>